@model List<JobPosting>

@{
    ViewData["Title"] = "Jobübersicht";
}

<div class="mt-4 p-5 bg-primary text-white rounded">
    <div class="display-1 text-center">
        Worktastic
    </div>
</div>


<h4 class="mt-2">
    Finde deinen Traumjob in deiner Nähe!
</h4>

<div class="row text-center mt-3">
    <div class="col-10">
        <input class="form-control-lg form-control" type="text" placeholder="Wonach suchst du?" />
    </div>
    <div class="col">
        <button class="btn btn-lg btn-primary">Suchen</button>
    </div>
</div>

<hr />

<div class="list-group">

    @{
        foreach (JobPosting jobPosting in Model)
        {
            <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@jobPosting.JobTitle</h5>
                    <small>@jobPosting.JobLocation</small>
                </div>
                <p class="mb-1">@jobPosting.CompanyName</p>
                <small>@jobPosting.ContactWebsite</small>
            </a>
        }
    }

</div>