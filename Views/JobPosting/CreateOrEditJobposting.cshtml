@model First_Step_API.Models.JobPosting
@{
    ViewData["Title"] = "Inserat erstellen/bearbeiten";
}

<form asp-controller="JobPosting" asp-action="CreateEditJob">
    <div class="card">

        <div class="card-header">
            <h5>Inserat bearbeiten</h5>
        </div>

        <div class="card-body">

            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="JobTitle" type="text" placeholder="Jobbezeichnung" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="JobLocation" type="text" placeholder="Arbeitsort" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <textarea rows="6" class="form-control" asp-for="JobDescription" placeholder="Jobbeschreibung"></textarea>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <input class="form-control" asp-for="Salary" type="number" placeholder="Jahresgehalt" />
                </div>
                <div class="col-2 col-form-label text-end">
                    Startdatum:
                </div>
                <div class="col-3">
                    <input class="form-control" asp-for="StartDate" type="date" />
                </div>
            </div>

            <hr />

            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="CompanyName" type="text" placeholder="Firmenname" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactWebsite" type="url" placeholder="Webseite" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="ContactPhone" type="tel" placeholder="Telefonnummer" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactMail" type="email" placeholder="E-Mail Adresse" />
                </div>
            </div>


        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
        </div>

    </div>

</form>